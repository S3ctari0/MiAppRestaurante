<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPlace"
    android:id="@+id/main"
    android:background="@drawable/fondo_degradado"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/textTittlePlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Titulo del Lugar"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imagePlace"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:layout_gravity="top|center"
            android:src="@drawable/restaurante" />
    </LinearLayout>
    <TextView
        android:id="@+id/textDescrPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="DescripciÃ³n del lugar"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/textCommentsPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Comentarios del lugar"
        android:textColor="#FFFFFF"/>

</LinearLayout>